# Telegram API credentials (get from https://my.telegram.org)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+1234567890
TELEGRAM_PASSWORD=your_account_password_here

# Telegram chat to monitor (chat ID or username)
# For public channels: @channelname or channel ID
# For private groups: use the chat ID (can be obtained using the script)
TELEGRAM_CHAT_ID=your_chat_id_or_username
TELEGRAM_TOPIC_ID=your_topic_id_here

# OpenAI API credentials
OPENAI_API_KEY=your_openai_api_key_here

# Backend API configuration
# URL of the Flask backend API (default: http://localhost:8000)
API_BASE_URL=http://localhost:8000

# Monitoring settings (optional - defaults shown)
# How often to check for new messages (in seconds)
CHECK_INTERVAL=30
